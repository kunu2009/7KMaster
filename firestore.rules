
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Projects: Only the owner can read/write their projects
    match /projects/{projectId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    
    // Skills: Only the owner can read/write their skills
    match /skills/{skillId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    
    // Notes: Only the owner can read/write their notes
    match /notes/{noteId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    
    // Today's Tasks: Only the owner can read/write their tasks
    match /todayTasks/{taskId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    
    // Time Blocks: Only the owner can read/write their time blocks
    match /timeBlocks/{blockId} {
      allow read, write: if isOwner(resource.data.userId);
    }

    // Habits: Only the owner can read/write their habits
    match /habits/{habitId} {
       allow read, write: if isOwner(resource.data.userId);
    }
    
    // Habit Logs: Only the owner can read/write their habit logs
    match /habitLogs/{logId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    
    // Journal (Self & Space): Only the owner can read/write their entries
    match /selfSpace/{itemId} {
      allow read, write: if isOwner(resource.data.userId);
    }

    // Research Items: Only the owner can read/write their research items
    match /researchItems/{itemId} {
      allow read, write: if isOwner(resource.data.userId);
    }
  }
}
